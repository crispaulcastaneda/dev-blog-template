<!DOCTYPE html>
<html lang="en">
    <!-- for head.ejs -->
    <%- include('./partials/head.ejs') %>
<body>

    <!-- For the nav.ejs -->
    <%- include('./partials/nav.ejs') %>

    <div class="details content">
        <h2><%= blog.title %></h2>
        <div class="content">
            <p><%= blog.body %></p>
        </div>
        <a class="delete" data-del="<%= blog._id %>">X</a>
    </div>

    <!-- For the footer.ejs -->
    <%- include('./partials/footer.ejs') %>

    <!-- Script for DELETE Method to delete from the database -->
    <script defer>
        'use strict'

        const toTrash = document.querySelector('a.delete');

        toTrash.addEventListener('click', (e) => {
            const endpoint = `/blogs/${toTrash.dataset.del}`;

            fetch(endpoint, {
                method: 'DELETE' // Ajax Request
        })
            .then((response) => response.json())
            .then((data) => console.log(data))
            .catch(err => console.log(err))
    });
    </script>

</body>
</html>